echo "Running isort ðŸš€ $*"
isort_result=$(isort "$@")

 echo "ISORT_RESULT<<EOF" >> $GITHUB_ENV
 echo $isort_result >> $GITHUB_ENV 
 echo "EOF" >> $GITHUB_ENV


# Capture the latest exit code
exit_code=$?

DELIMITER=$(echo $RANDOM | md5sum | head -c 20)
{
    echo "isort-output<<${DELIMITER}"
    echo -e "${isort_result}"
    echo "${DELIMITER}"
} >> "${GITHUB_OUTPUT}"

echo "Isort completed! âœ…"

exit $exit_code
